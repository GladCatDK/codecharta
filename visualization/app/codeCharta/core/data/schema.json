{

    "type": "object",

    "required":["projectName", "nodes"],

    "properties": {
        "projectName": {
            "type": "string"
        },
        "nodes": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/node"
            }
        },
        "dependencies": {
            "type": "object",
            "minItems": 0,
            "items": {
                "type": "array",
                "minItems": 1,
                "items": {
                    "$ref": "#/definitions/dependency"
                }
            }

        }
    },

    "definitions": {
        "node":{
            "type": "object",
            "required":["name"],
            "properties": {
                "name": {
                    "type": "string"
                },
                "children": {
                    "type": "array",
                    "minItems": 0,
                    "items": {
                        "$ref": "#/definitions/node"
                    }
                },
                "attributes": {
                    "$ref": "#/definitions/attributeList"
                }
            }
        },
        "dependency":{
            "type": "object",
            "required":["node", "dependantNode"],
            "properties": {
                "node": {
                    "type": "string"
                },
                "nodeFilename": {
                    "type": "string"
                },
                "dependantNode": {
                    "type": "string"
                },
                "dependantNodeFilename": {
                    "type": "string"
                },
                "pairingRate": {
                    "type": "number"
                },
                "averageRevs": {
                    "type": "number"
                }
            }
        },
        "attributeList":{
            "type":"object",
            "patternProperties": {
                "^[A-Za-z0-9_]+$":{
                    "type": "number"
                }
            }
        }
    }
}